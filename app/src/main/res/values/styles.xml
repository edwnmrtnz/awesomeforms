<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="autoCompleteTextViewStyle">@android:style/Widget.AutoCompleteTextView</item>
    </style>

    <style name="AwesomeForm.EditText.NumberEditText">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/AwesomeForm_hintColor</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="IgniterAppThemeAwesomeFormEditTextPrefixStyle">
        <item name="android:drawablePadding">10sp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="IgniterAppThemeAwesomeFormPrefixStyle">
        <item name="android:textSize">18sp</item>
    </style>

</resources>

